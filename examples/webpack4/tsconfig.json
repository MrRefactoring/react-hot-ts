{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": [ "src" ],
  "exclude": ["node_modules"]
}
